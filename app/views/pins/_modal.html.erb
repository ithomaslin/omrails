<div id="myModal<%= pin.id %>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">  
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>  
    <h3 id="myModalLabel">&nbsp;</h3>
  </div>
  <div class="modal-body max-height:600px">
    <%= image_tag pin.image %>
    <a class="btn btn-mini"><i class=" icon-heart"></i></a>
    <p>
    	<%= pin.description %>
    </p>
    <p>
	    <strong>
		  <%= link_to pin.user.name, pin.user %>
      </strong>
    </p>
    <% if current_user == pin.user %>
		<p>
			<%= link_to 'Edit', edit_pin_path(pin) %> | 
			<%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
		</p>
	<% end %>
  </div>
  <div class="modal-footer">
  	<%= link_to "Show Full Size", pin, class: "btn btn-primary" %>
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
</div>