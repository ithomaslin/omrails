<!DOCTYPE html>
<html>
	<head>
		<title>PIN</title>
			<%= stylesheet_link_tag    "application", :media => "all" %>
			<%= javascript_include_tag "application" %>
			<%= csrf_meta_tags %>
	</head>
	<body>
		<%= render 'layouts/header' %>
		<div class="container">
			<% flash.each do |name, msg| %>
                <%= content_tag(:div, msg, class: "alert alert-#{name}", id: "flash") %>
            <% end %>
            <%= yield %>
			<%= render 'layouts/footer' %>
		</div>
		<a class="scrollup btn btn-info btn-large" href="#"><i class="icon-arrow-up icon-white"></i></a>
	</body>
</html>
